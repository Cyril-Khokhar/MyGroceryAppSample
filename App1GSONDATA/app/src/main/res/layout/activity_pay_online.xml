<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Online Payment"
        android:textSize="24dp"
        android:textColor="@color/white_color"
        android:background="@color/red_color"
        android:layout_centerHorizontal="true"
        android:id="@+id/text_online_payment"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/image_view_card"
        android:layout_below="@id/text_online_payment"/>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:id="@+id/edit_text_name_on_card"
        android:textColor="@color/black_color"
        android:hint="Name on Card"
        android:textSize="18sp"
        android:layout_below="@id/image_view_card"/>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_card_number"
        android:layout_marginTop="20dp"
        android:textColor="@color/black_color"
        android:hint="Card Number"
        android:layout_below="@id/edit_text_name_on_card"/>

    <EditText android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:hint="01/12/2021"
        android:id="@+id/date_picker"
        android:layout_below="@id/edit_text_card_number"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="Security Code"
        android:id="@+id/security_code"
        android:textAlignment="center"
        android:layout_below="@id/edit_text_card_number"
        android:layout_toRightOf="@id/date_picker"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_pay_now"
        android:textSize="20sp"
        android:textColor="@color/red_color"
        android:text="Pay"
        android:background="@color/white_color"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/date_picker"/>


</RelativeLayout>