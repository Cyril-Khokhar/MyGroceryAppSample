<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="380dp"
    android:textAlignment="center"
    android:layout_marginTop="20dp"
    android:layout_gravity="center_horizontal"
    >

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="380dp">

        <ImageView
            android:id="@+id/image_view_order_detail"
            android:layout_width="380dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp" />

        <TextView
            android:textColor="@color/black_color"
            android:id="@+id/text_view_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_view_order_detail"
            android:layout_marginLeft="20dp"
            android:text="Product 1"
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:textColor="@color/black_color"
            android:id="@+id/product_id"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_product_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Product Id : "
            android:textSize="16sp" />

        <TextView
            android:textColor="@color/black_color"
            android:id="@+id/text_view_product_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_product_name"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/product_id"
            android:text="product id "
            android:textSize="16sp" />

        <TextView
            android:textColor="@color/black_color"
            android:id="@+id/product_price"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_id"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Price : "
            android:textSize="16sp" />

        <TextView
            android:textColor="@color/black_color"
            android:id="@+id/text_view_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_product_id"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/product_price"
            android:text="product price"
            android:textSize="16sp" />

        <TextView
            android:textColor="@color/black_color"
            android:id="@+id/product_quantity"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_price"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Quantity : "
            android:textSize="16sp" />

        <TextView
            android:textColor="@color/black_color"
            android:id="@+id/text_view_product_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_product_price"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/product_quantity"
            android:text="Quantity"
            android:textSize="16sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>