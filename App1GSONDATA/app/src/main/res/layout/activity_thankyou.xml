<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dear "
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"
        android:id="@+id/text_view_dear"
        android:textSize="24dp"
        android:textColor="@color/black_color"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_username"
        android:textColor="@color/red_color"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        android:layout_toRightOf="@id/text_view_dear"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:lineSpacingMultiplier="2"
        android:textSize="20dp"
        android:layout_below="@id/text_view_username"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/greeting_text"
        android:text="Thanks for ordering.\nYour order will be delivered in 20 minutes!"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="130dp"
       android:layout_below="@id/greeting_text"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/logo"
        android:src="@drawable/grocery_app_logo"/>

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerInParent="true"
       android:layout_marginBottom="100dp"
        android:fontFamily="@font/aldrich"
        android:text="Mirchi 360"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/appbar"
        android:textSize="28sp"
        />

</RelativeLayout>